<%- include("partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field"><input type="text" name="blog[title]" placeholder="<%= blog.title %>"></div>
		<div class="field"><input type="text" name="blog[image]" placeholder="<%= blog.image %>"></div>
		<div class="field">
			<label>Blog content</label>
			<textarea  name="blog[body]" required><%= blog.body %></textarea>
		</div>
		<div class="field"><input type="submit" class="ui violet basic button"></div>
	
	</form>
</div>


<%- include("partials/footer") %>